    ghc-options:        -Wall
                        -main-is Dyna.Main.Driver

    Build-Depends:      ansi-wl-pprint >= 0.6,
                        base >=4 && <6,
                        bytestring >=0.9,
                        charset >=0.3,
                        containers >=0.4,
                        either >= 3.4,
                        ghc-prim,
                        HUnit >=1.2,
                        mtl >=2.1,
                        lens >=4,
                        -- logict >=0.6,
